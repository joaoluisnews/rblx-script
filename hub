local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Notificação
OrionLib:MakeNotification({
    Name = "Notification",
    Content = "Welcome to RBLX SCRIPT Hub!",
    Image = "rbxassetid://7072718364",  -- Ícone de notificação
    Time = 5
})

-- Janela principal com mensagem de carregamento e ícone
local Window = OrionLib:MakeWindow({
    Name = "RBLX SCRIPT",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "RBLXScripts",
    IntroText = "Loading RBLX SCRIPT...",  -- Texto enquanto carrega
    IntroIcon = "rbxassetid://7072718364",  -- Ícone de carregamento
    LoadingTitle = "Loading RBLX SCRIPT",  -- Título enquanto carrega
    LoadingSubtitle = "Please wait...",    -- Subtítulo enquanto carrega
    LoadingIcon = "rbxassetid://7072718364" -- Ícone de carregamento
})

