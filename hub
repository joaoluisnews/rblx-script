-- Aba Universal primeiro
local universalTab = {
    ["Universal"] = {
        {Name = "Infinite Yield", Script = "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"},
        {Name = "GameHub V5", Script = "https://raw.githubusercontent.com/GamerScripter/Game-Hub/main/loader"},
        {Name = "Scarlart", Script = "https://raw.githubusercontent.com/scarlet1837/a/main/Tpwalk"}
    }
}

-- Criar aba Universal primeiro
for tabName, scripts in pairs(universalTab) do
    local Tab = Window:MakeTab({
        Name = tabName,
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })
    
    for _, scriptData in ipairs(scripts) do
        local Section = Tab:AddSection({
            Name = scriptData.Name
        })
        
        Section:AddButton({
            Name = scriptData.Name,
            Callback = function()
                loadstring(game:HttpGet(scriptData.Script))()
            end
        })
    end
end

-- Criar as outras abas
for tabName, scripts in pairs(tabs) do
    local Tab = Window:MakeTab({
        Name = tabName,
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })
    
    for _, scriptData in ipairs(scripts) do
        local Section = Tab:AddSection({
            Name = scriptData.Name
        })
        
        Section:AddButton({
            Name = scriptData.Name,
            Callback = function()
                loadstring(game:HttpGet(scriptData.Script))()
            end
        })
    end
end

OrionLib:Init() -- UI Lib End
